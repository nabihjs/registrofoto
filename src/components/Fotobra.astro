--- 
const {imagen, textin, descripcion} = Astro.props;
---

<div class="imagenes">
  <div class="titul">
    {imagen && <img src={imagen.src} alt="" />}
    <p>{descripcion}</p>
  </div>
</div>

<style>
    
.imagenes {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 0.5rem;
  padding: 2%;
}

.imagenes img {
  width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: cover;
  border-radius: 8px;
  transition: transform 0.3s ease, filter 0.3s ease;
  opacity: 60%;
}

.imagenes img:hover {
  transform: scale(1.05);
  filter: brightness(1.2);
  cursor: pointer;
  opacity: 100%;
}

.titul {
  position: relative;
  overflow: hidden;
}
.titul p {
  position: absolute;
  bottom: 0; 
  left: 0;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 1rem;
  font-family: 'Times New Roman', Times, serif;
  font-style: italic;
  background: rgba(0, 0, 0, 0.7); 
  padding: 1px 0;
  opacity: 0; 
  transition: opacity 0.3s ease;
}
.titul:hover p {
  opacity: 1;
}

</style>